# Environment variables for Daily Stock News Agent
# Copy this file to .env and update with your actual values

# ================================
# YouTube Processing Settings
# ================================
YOUTUBE_DOWNLOAD_PATH=./data/videos
YOUTUBE_QUALITY=best[height<=720]
YOUTUBE_MAX_DURATION=3600

# ================================
# Speech-to-Text API Keys
# ================================
# OpenAI Whisper (Free - runs locally, no API key needed)
WHISPER_MODEL_SIZE=base

# Google Cloud Speech-to-Text (Free tier: 60 minutes/month)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-credentials.json

# AssemblyAI (Free tier: 5 hours/month)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Rev.ai (Paid service)
REVAI_API_KEY=your_revai_api_key_here

# ================================
# AI Provider Settings (for enhanced analysis)
# ================================
# OpenAI GPT (for advanced content analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Google Gemini (Free tier available)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro

# Anthropic Claude (Paid)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ================================
# Processing Settings
# ================================
# Default speech-to-text provider (whisper, google, assemblyai, revai, auto)
DEFAULT_STT_PROVIDER=whisper

# Default AI provider for analysis (local, openai, gemini, anthropic)
DEFAULT_AI_PROVIDER=local

# Enable translation to English
ENABLE_TRANSLATION=true

# Language settings
SOURCE_LANGUAGE=te-IN
TARGET_LANGUAGE=en

# ================================
# Output Settings
# ================================
TRANSCRIPTS_PATH=./data/transcripts
ANALYSIS_PATH=./data/analysis
REPORTS_PATH=./data/reports
BLOGS_PATH=./data/blogs

# Default output formats (comma-separated: markdown,html,json,pdf)
DEFAULT_OUTPUT_FORMATS=markdown,json

# ================================
# Channel Configuration
# ================================
# MoneyPurse Channel
MONEYPURSE_CHANNEL_URL=https://www.youtube.com/@MoneyPurse
MONEYPURSE_UPLOAD_TIME=18:00-20:00

# Day Trader Telugu Channel  
DAYTRADER_CHANNEL_URL=https://www.youtube.com/@daytradertelugu
DAYTRADER_UPLOAD_TIME=18:00-20:00

# ================================
# Automation Settings
# ================================
# Daily processing time (24-hour format)
DAILY_PROCESSING_TIME=19:30

# Report delivery time
REPORT_DELIVERY_TIME=22:00

# Enable automatic processing
AUTO_PROCESSING_ENABLED=true

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=300

# ================================
# Storage Settings
# ================================
# Keep files for X days (0 = keep forever)
KEEP_VIDEOS_DAYS=7
KEEP_TRANSCRIPTS_DAYS=30
KEEP_REPORTS_DAYS=365

# ================================
# Notification Settings (Optional)
# ================================
# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_notification_email@gmail.com

# Slack notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ================================
# Advanced Settings
# ================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=2

# Processing timeout (seconds)
PROCESSING_TIMEOUT=1800

# API rate limiting
API_RATE_LIMIT_CALLS=100
API_RATE_LIMIT_PERIOD=3600

# ================================
# Blog Generation Settings
# ================================
BLOG_TEMPLATE_PATH=./templates/blog_template.md
BLOG_AUTHOR=Daily Stock News Agent
BLOG_SITE_NAME=Stock Market Daily
GENERATE_BLOG_POSTS=true
